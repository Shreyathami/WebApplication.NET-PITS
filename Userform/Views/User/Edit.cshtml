@model UserForm.Models.UserModel

<h2>Edit User</h2>

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>

    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>

    <div>
        <label>Age</label>
        <input asp-for="Age" />
    </div>

    <button type="submit">Save</button>

</form>